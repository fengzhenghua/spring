	<bean class="com.tydic.uda.resolver.mq.activemq.ActivemqOperateResolver">
		<!-- 消息队列URL 必填 -->
		<property name="brokerURL" value="tcp://101.200.72.48:61616" />
		<!-- 消息中心连接用户名 必填 -->
		<property name="user" value="admin" />
		<!-- 消息中心连接密码 必填 -->
		<property name="password" value="admin" />
		<!-- 配置自定义监听 接收端 必填 -->
